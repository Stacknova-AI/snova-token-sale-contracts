{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "mocha"],
    "skipLibCheck": true
  },
  "include": ["scripts/**/*.ts", "test/**/*.ts", "typechain/**/*.d.ts"],
  "exclude": ["node_modules"]
}
